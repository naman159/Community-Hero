<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        card_view:cardCornerRadius="8dp"
        card_view:cardElevation="8dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="8dp"
            android:background="#FFF">

            <TextView
                android:id="@+id/textViewTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="5dp"
                android:text="Cleaning the neighborhood trash"
                android:textSize="20dp"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/textViewShortDesc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/textViewTitle"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="15dp"
                android:text="There's a lot of garbage left unattended these days. So I thought we could clean it up"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small" />

            <TextView
                android:id="@+id/textViewContributors"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/textViewShortDesc"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="15dp"
                android:paddingRight="15dp"
                android:text="Contributors: 24"
                android:textColor="#000"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small.Inverse" />

            <TextView
                android:id="@+id/textViewDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/textViewShortDesc"
                android:layout_marginLeft="130dp"
                android:layout_marginTop="15dp"
                android:paddingRight="15dp"
                android:text="Date: "
                android:textColor="#000"/>

            <Button
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_toRightOf="@+id/textViewContributors"
                android:layout_marginTop="95dp"
                android:layout_marginLeft="180dp"
                android:onClick="save"
                android:background="@drawable/saved"/>


        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>